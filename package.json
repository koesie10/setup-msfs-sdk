{
  "name": "@koesie10/setup-msfs-sdk-action",
  "version": "0.0.0",
  "private": true,
  "description": "GitHub Action to setup MSFS SDK from a URL",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"**/*.ts\"",
    "format-check": "prettier --check \"**/*.ts\"",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "all": "npm run build && npm run format && npm run lint && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/koesie10/setup-msfs-sdk-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/tool-cache": "^2.0.1"
  },
  "devDependencies": {
    "@types/node": "^16.11.68",
    "@typescript-eslint/parser": "^5.45.0",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.26.0",
    "eslint-plugin-github": "^4.4.0",
    "js-yaml": "^4.1.0",
    "prettier": "^2.7.1",
    "typescript": "^4.4.4"
  }
}
